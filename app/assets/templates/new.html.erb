<form class="form-horizontal" role="form" ng-submit="submitModel()">
  <div class="form">
    <label for="firstname" class="col-sm-2 control-label">First name:</label>
    <div class="userinfo">
      <input class="form-control" id="firstname" placeholder="First name" ng-model="newUserModel.firstName">
    </div>
  </div>
  
  <div class="form">
    <label for="lastname" class="col-sm-2 control-label">Last name:</label>
    <div class="userinfo">
      <input class="form-control" id="lastname" placeholder="Last name" ng-model="newUserModel.lastName">
    </div>
  </div>

  <div class="form">
    <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="userinfo">
      <input class="form-control" id="email" placeholder="Email" ng-model="newUserModel.email">
    </div>
  </div>
 
  <div class="form">
    <div class="userin">
      <button type="submit" class="btn btn-success">Sign up</button>
    </div>
  </div>
</form>